{{> top-header}}

<main>
    <!-- Tabs -->
    <div class="tabs">
        <div class="tab active">Transferencias</div>
        <div class="tab inactive">Programadas</div>
    </div>


    <!-- Transfers History Section -->
    <section class="section">
        <div class="section-header">
            <h2>Últimas transferencias</h2>
            <div class="edit-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
            </div>
        </div>
        
        <div class="product-card">
            <div class="movements-header">
                <h4>Historial de transferencias</h4>
                <a href="/admin-panel" target="_blank">Ver admin</a>
            </div>

            {{#each transfers}}
            <div class="movement-item">
                <div class="movement-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        {{#if (eq this.transferType 'sent')}}
                            <path d="M4 10v1a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3v-1H4zM10 5a3 3 0 0 0-3 3v1h6V8a3 3 0 0 0-3-3zM3 8a4 4 0 0 1 4-4h6a4 4 0 0 1 4 4v1a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V8zM3 18a1 1 0 0 1 1-1h16a1 1 0 1 1 0 2H4a1 1 0 0 1-1-1z"/>
                        {{else}}
                            <path d="M4 10v1a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3v-1H4zM10 5a3 3 0 0 0-3 3v1h6V8a3 3 0 0 0-3-3zM3 8a4 4 0 0 1 4-4h6a4 4 0 0 1 4 4v1a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V8zM3 18a1 1 0 0 1 1-1h16a1 1 0 1 1 0 2H4a1 1 0 0 1-1-1z"/>
                        {{/if}}
                    </svg>
                </div>
                <div class="movement-details">
                    <p>{{this.description}}</p>
                    <span class="transfer-recipient">
                        {{#if (eq this.transferType 'sent')}}Para: {{this.recipientName}}{{/if}}
                        {{#if (eq this.transferType 'received')}}De: {{this.senderName}}{{/if}}
                    </span>
                </div>
                <span class="movement-amount {{#if (eq this.transferType 'received')}}positive{{/if}}">
                    {{#if (eq this.transferType 'sent')}}
                        -{{formatAmount this.amount}} {{this.currency}}
                    {{else}}
                        +{{formatAmount this.amount}} {{this.currency}}
                    {{/if}}
                </span>
            </div>
            {{/each}}

            {{#unless transfers}}
            <div class="empty-state">
                <p>No hay transferencias recientes</p>
                <a href="#" onclick="openNewTransferModal()">Hacer primera transferencia</a>
            </div>
            {{/unless}}

            <a href="/admin-panel" class="card-footer-link">Ver panel de administración</a>
        </div>
    </section>
</main>

<!-- New Transfer Modal -->
<div id="newTransferModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Nueva Transferencia</h3>
            <span class="close" onclick="closeModal('newTransferModal')">&times;</span>
        </div>
        <div class="modal-body">
            <form id="newTransferForm">
                <div class="form-group">
                    <label for="fromAccount">Desde cuenta:</label>
                    <select id="fromAccount" required>
                        <option value="">Seleccionar cuenta</option>
                        {{#each accounts}}
                        <option value="{{this.id}}">{{this.accountNumber}} - {{this.type}} ({{formatAmount this.balance}} {{this.currency}})</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="recipientName">Nombre del beneficiario:</label>
                    <input type="text" id="recipientName" required>
                </div>
                <div class="form-group">
                    <label for="recipientAccount">Cuenta del beneficiario:</label>
                    <input type="text" id="recipientAccount" required>
                </div>
                <div class="form-group">
                    <label for="transferAmount">Importe:</label>
                    <input type="number" id="transferAmount" step="0.01" min="0.01" required>
                </div>
                <div class="form-group">
                    <label for="transferCurrency">Moneda:</label>
                    <select id="transferCurrency" required>
                        <option value="€">Euro (€)</option>
                        <option value="$">US Dollar ($)</option>
                        <option value="£">British Pound (£)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="transferDescription">Concepto:</label>
                    <input type="text" id="transferDescription" required>
                </div>
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('newTransferModal')">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Enviar Transferencia</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{> bottom-nav activePage="transfers"}}

<script src="/js/transfers.js"></script>
