{{> desktop/top-header}}

<div class="desktop-main-container">
    {{> desktop/sidebar}}

    <main class="desktop-main-content">
        <!-- Page Header -->
        <div class="page-header">
            <h1>My Profile</h1>
            <div class="header-actions">
                <button class="btn btn-primary">Edit Profile</button>
                <button class="btn btn-secondary">Privacy Settings</button>
            </div>
        </div>

        <div class="profile-layout">
            <!-- Main Content -->
            <div class="profile-main">
                <!-- Welcome Section -->
                <div class="welcome-card">
                    <div class="welcome-content">
                        <div class="welcome-avatar">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </div>
                        <div class="welcome-text">
                            <h2>Welcome, {{user.name}}</h2>
                            <p>Personal banking services</p>
                        </div>
                    </div>
                </div>

                <!-- Services Grid -->
                <div class="section-card">
                    <div class="section-header">
                        <h2>Services</h2>
                    </div>
                    <div class="services-grid">
                        <div class="service-item">
                            <div class="service-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            <h3>Consultation</h3>
                            <p>Financial advice and guidance</p>
                        </div>
                        <div class="service-item">
                            <div class="service-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="12" y1="1" x2="12" y2="23"></line>
                                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                </svg>
                            </div>
                            <h3>Investments</h3>
                            <p>Investment planning services</p>
                        </div>
                        <div class="service-item">
                            <div class="service-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                            </div>
                            <h3>Mortgages</h3>
                            <p>Home financing solutions</p>
                        </div>
                        <div class="service-item">
                            <div class="service-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="3"></circle>
                                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                                </svg>
                            </div>
                            <h3>Accounts</h3>
                            <p>Account setup and management</p>
                        </div>
                        <div class="service-item">
                            <div class="service-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M9 12l2 2 4-4"></path>
                                    <circle cx="12" cy="12" r="10"></circle>
                                </svg>
                            </div>
                            <h3>Insurance</h3>
                            <p>Asset protection services</p>
                        </div>
                        <div class="service-item">
                            <div class="service-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                </svg>
                            </div>
                            <h3>Support</h3>
                            <p>24/7 banking assistance</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="profile-sidebar">
                <!-- Blue BBVA Assistant Card -->
                <div class="assistant-card">
                    <div class="assistant-header">
                        <img src="/Logo-BBVA.webp" alt="BBVA Logo" class="bbva-logo" />
                        <h3>Blue BBVA</h3>
                    </div>
                    <p>Virtual assistant available 24/7 for banking queries.</p>
                    <button class="btn btn-primary">Start Conversation</button>
                </div>

                <!-- Quick Contact Card -->
                <div class="quick-contact-card">
                    <h3>Need Immediate Help?</h3>
                    <div class="contact-options">
                        <a href="tel:944230045" class="contact-option">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                            <div class="contact-text">
                                <strong>Call Us</strong>
                                <span>944 23 00 45</span>
                            </div>
                        </a>
                        <a href="#" class="contact-option">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                            <div class="contact-text">
                                <strong>Send Message</strong>
                                <span>Secure messaging</span>
                            </div>
                        </a>
                        <a href="#" class="contact-option">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <div class="contact-text">
                                <strong>Book Meeting</strong>
                                <span>In-person consultation</span>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Profile Summary Card -->
                <div class="profile-summary-card">
                    <h3>Profile Summary</h3>
                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-label">Customer Since</span>
                            <span class="stat-value">2020</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Active Products</span>
                            <span class="stat-value">4</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Last Login</span>
                            <span class="stat-value">Today</span>
                        </div>
                    </div>
                    <a href="#" class="view-full-profile">View Full Profile</a>
                </div>
            </div>
        </div>
    </main>
</div>

<script src="/js/desktop/common.js"></script>
