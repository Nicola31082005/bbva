{{> desktop/top-header}}

<div class="desktop-main-container">
    {{> desktop/sidebar}}

    <main class="desktop-main-content">
        <!-- Operations Section -->
        <div class="operations-section">
            <div class="section-header">
                <h2>Perform an operation</h2>
                <p class="section-subtitle">IMPORTANT ACTIVITY</p>
            </div>
            <div class="operations-grid">
                <!-- Transfers to other banks -->
                <div class="operation-card">
                    <div class="operation-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M7 17l9.2-9.2M17 17H7V7"></path>
                        </svg>
                    </div>
                    <div class="operation-info">
                        <h3 class="operation-title">Transfers to other banks and transfers within the bank</h3>
                        <p class="operation-description">You can make a domestic transfer and send your money immediately, on a one-off basis or scheduled.</p>
                        <a href="#" class="operation-link">Make a transfer to another bank or transfer within the bank</a>
                    </div>
                </div>
                
                <!-- Send/Request Bizum -->
                <div class="operation-card">
                    <div class="operation-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                            <path d="M2 17l10 5 10-5"></path>
                            <path d="M2 12l10 5 10-5"></path>
                        </svg>
                    </div>
                    <div class="operation-info">
                        <h3 class="operation-title">Send / Request Bizum</h3>
                        <p class="operation-description">All you need is your cell phone to send money to a friend, shop online or donate to the cause of your choice.</p>
                        <a href="#" class="operation-link">Go to Bizum</a>
                    </div>
                </div>
                
                <!-- International transfer -->
                <div class="operation-card">
                    <div class="operation-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M2 12h20"></path>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>
                    </div>
                    <div class="operation-info">
                        <h3 class="operation-title">International transfer</h3>
                        <p class="operation-description">In foreign currency to more than 31 countries and with a preferential exchange rate.</p>
                        <div class="operation-links">
                            <a href="#" class="operation-link">Simulate your international transfer</a>
                            <a href="#" class="operation-link">Make an international transfer</a>
                        </div>
                    </div>
                </div>
                
                <!-- Activate and deactivate cards -->
                <div class="operation-card">
                    <div class="operation-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M8 12l2 2 4-4"></path>
                        </svg>
                    </div>
                    <div class="operation-info">
                        <h3 class="operation-title">Activate and deactivate your cards</h3>
                        <p class="operation-description">Securely control the use of your cards by turning them on (activating) or off (deactivating).</p>
                        <a href="#" class="operation-link">Limit card operations</a>
                    </div>
                </div>
                
                <!-- Split an expense -->
                <div class="operation-card">
                    <div class="operation-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                    </div>
                    <div class="operation-info">
                        <h3 class="operation-title">Split an expense</h3>
                        <p class="operation-description">Finance your purchases, payments or transfers and pay in a more convenient and flexible way.</p>
                        <a href="#" class="operation-link">Split an expense</a>
                    </div>
                </div>
                
                <!-- Transfer from account to card -->
                <div class="operation-card">
                    <div class="operation-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                            <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                    </div>
                    <div class="operation-info">
                        <h3 class="operation-title">Transfer from account to card</h3>
                        <p class="operation-description">For when you want to settle a payment or take advantage of the benefits of using the card.</p>
                        <a href="#" class="operation-link">Transfer from account to card</a>
                    </div>
                </div>
            </div>
            
            <div class="see-more-section">
                <button class="see-more-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 9l6 6 6-6"></path>
                    </svg>
                    See more
                </button>
            </div>
        </div>
    </main>
</div>

<script src="/js/desktop/transfers.js"></script>
