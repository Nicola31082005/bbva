<script>
// Toggle see more/less functionality
function toggleSeeMore() {
    const additionalOps = document.querySelector('.additional-operations');
    const seeMoreBtn = document.querySelector('.see-more-btn');
    const seeMoreText = document.querySelector('.see-more-text');
    const chevronIcon = document.querySelector('.chevron-icon');
    
    if (additionalOps.style.display === 'none') {
        additionalOps.style.display = 'block';
        seeMoreText.textContent = 'See fewer';
        chevronIcon.style.transform = 'rotate(180deg)';
    } else {
        additionalOps.style.display = 'none';
        seeMoreText.textContent = 'See more';
        chevronIcon.style.transform = 'rotate(0deg)';
    }
}

// Toggle expander functionality
function toggleExpander(button) {
    const expander = button.closest('.operation-expander');
    const content = expander.querySelector('.expander-content');
    const icon = button.querySelector('.expander-icon');
    
    if (content.style.display === 'none') {
        content.style.display = 'block';
        icon.style.transform = 'rotate(45deg)';
        expander.classList.add('expanded');
    } else {
        content.style.display = 'none';
        icon.style.transform = 'rotate(0deg)';
        expander.classList.remove('expanded');
    }
}

// Scroll to top functionality
function scrollToTop() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
}

// Show/hide back to top button
window.addEventListener('scroll', function() {
    const backToTopBtn = document.querySelector('.back-to-top-btn');
    if (window.pageYOffset > 300) {
        backToTopBtn.style.display = 'flex';
    } else {
        backToTopBtn.style.display = 'none';
    }
});
</script>
