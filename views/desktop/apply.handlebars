{{> desktop/top-header}}

<div class="desktop-main-container">
    <!-- Sidebar -->
    {{> desktop/sidebar}}

    <!-- Main Content Area -->
    <main class="desktop-main-content">
        <!-- Top Navigation Links -->
        <div class="top-nav-links">
            <a href="#" class="nav-link">Tax information</a>
            <a href="#" class="nav-link">Emergency help</a>
            <a href="#" class="nav-link">Inheritance processing</a>
            <a href="#" class="nav-link">Accessibility</a>
        </div>

        <!-- Welcome Section -->
        <div class="apply-welcome-section">
            <div class="welcome-header">
                <h1 class="apply-title">I want to subscribe</h1>
                <p class="apply-subtitle">WHAT OTHER PRODUCTS DO YOU WANT TO SIGN UP FOR?</p>
            </div>
        </div>

        <!-- Products Grid Section -->
        <div class="products-grid-section">
            <div class="products-grid">
                <!-- Row 1 -->
                <div class="product-card">
                    <div class="product-icon loans">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"></path>
                            <path d="M12 18V6"></path>
                        </svg>
                    </div>
                    <h3 class="product-name">Loans</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon insurance">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                        </svg>
                    </div>
                    <h3 class="product-name">Insurance</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon investment">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                        </svg>
                    </div>
                    <h3 class="product-name">Investment funds</h3>
                </div>

                <!-- Row 2 -->
                <div class="product-card">
                    <div class="product-icon cards">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                            <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                    </div>
                    <h3 class="product-name">Cards</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon pension">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M12 1v6m0 6v6m11-7h-6m-6 0H1"></path>
                        </svg>
                    </div>
                    <h3 class="product-name">Salary and Pension</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon stocks">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                            <polyline points="17 6 23 6 23 12"></polyline>
                        </svg>
                    </div>
                    <h3 class="product-name">Stock exchange and markets</h3>
                </div>

                <!-- Row 3 -->
                <div class="product-card">
                    <div class="product-icon savings-insurance">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                            <line x1="16" y1="13" x2="8" y2="13"></line>
                            <line x1="16" y1="17" x2="8" y2="17"></line>
                            <polyline points="10 9 9 9 8 9"></polyline>
                        </svg>
                    </div>
                    <h3 class="product-name">Savings insurance</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon mortgages">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                    </div>
                    <h3 class="product-name">Mortgages</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon efficient-home">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <circle cx="12" cy="12" r="2"></circle>
                            <path d="M9 22h6"></path>
                        </svg>
                    </div>
                    <h3 class="product-name">Efficient home</h3>
                </div>

                <!-- Row 4 -->
                <div class="product-card">
                    <div class="product-icon pension-plans">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="8" r="7"></circle>
                            <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                        </svg>
                    </div>
                    <h3 class="product-name">Pension Plans</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon accounts">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="12" y1="1" x2="12" y2="23"></line>
                            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                        </svg>
                    </div>
                    <h3 class="product-name">Accounts</h3>
                </div>

                <div class="product-card">
                    <div class="product-icon vehicles">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14 16H9m10 0h3v-3.15a1 1 0 0 0-.84-.99L16 11l-2.7-3.14a1 1 0 0 0-.76-.35H8.82a1 1 0 0 0-.76.35L6.36 11l-4.16 1.86A1 1 0 0 0 1 13.85V16h3m5 0a2 2 0 1 0 4 0m-4 0a2 2 0 1 1-4 0"></path>
                        </svg>
                    </div>
                    <h3 class="product-name">Vehicles</h3>
                </div>

                <!-- Row 5 -->
                <div class="product-card">
                    <div class="product-icon deposits">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                            <line x1="8" y1="21" x2="16" y2="21"></line>
                            <line x1="12" y1="17" x2="12" y2="21"></line>
                        </svg>
                    </div>
                    <h3 class="product-name">Deposits</h3>
                </div>
            </div>
        </div>

        <!-- Footer Section with BBVA Branding -->
        <div class="apply-footer">
            <div class="footer-brand">
                <div class="brand-section">
                    <img src="/Logo-BBVA.webp" alt="BBVA" class="footer-logo">
                    <div class="brand-info">
                        <h3>BBVA</h3>
                        <p>Banco Bilbao Vizcaya Argentaria S.A. - 2025</p>
                    </div>
                </div>
                <div class="footer-links">
                    <a href="#" class="footer-link">Security</a>
                    <a href="#" class="footer-link">Legal notice</a>
                    <a href="#" class="footer-link">Cookies</a>
                    <a href="#" class="footer-link">Personal data</a>
                    <a href="#" class="footer-link">Customer fees</a>
                    <a href="#" class="footer-link">Statutory reports</a>
                    <a href="#" class="footer-link">Accessibility</a>
                </div>
                <div class="footer-extra">
                    <div class="social-icons">
                        <a href="#" class="social-icon">📘</a>
                        <a href="#" class="social-icon">📧</a>
                        <a href="#" class="social-icon">🐦</a>
                        <a href="#" class="social-icon">📺</a>
                    </div>
                    <div class="certifications">
                        <img src="https://via.placeholder.com/80x40?text=ILUNION" alt="ILUNION" class="cert-logo">
                        <img src="https://via.placeholder.com/40x40?text=♿" alt="Accessibility" class="cert-logo">
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Floating Help Button -->
<div class="floating-help">
    <button class="help-btn" title="Help">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
        <span class="help-text">Help</span>
    </button>
</div>

<script src="/js/desktop/apply.js"></script>
