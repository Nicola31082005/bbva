{{> desktop/top-header}}

<div class="desktop-main-container">
    {{> desktop/sidebar}}

    <main class="desktop-main-content">
        <!-- Page Header -->
        <div class="page-header">
            <h1>Financial Health</h1>
            <div class="header-actions">
                <button class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                    Configure
                </button>
                <button class="btn btn-primary">View Evolution</button>
            </div>
        </div>

        <div class="financial-layout">
            <!-- Main Content -->
            <div class="financial-main">
                <!-- Tabs Navigation -->
                <div class="tabs-navigation">
                    <button class="tab-btn active">Net Worth</button>
                    <button class="tab-btn">Financial Coach</button>
                </div>

                <!-- Products Summary -->
                <div class="products-summary">
                    <span class="products-count">Products (1/1)</span>
                    <a href="#" class="configure-link">Configure</a>
                </div>

                <!-- Net Worth Card -->
                <div class="section-card networth-card">
                    <div class="networth-content">
                        <div class="networth-main">
                            <p class="networth-label">Current net worth</p>
                            <h2 class="networth-amount">400.06€</h2>
                            <div class="networth-change">
                                <span>Since January: 400.06€</span>
                                <span class="change-arrow positive">▲</span>
                            </div>
                        </div>
                        <div class="networth-actions">
                            <a href="#" class="evolution-link">View Evolution</a>
                            <button class="btn btn-secondary">Detailed Report</button>
                        </div>
                    </div>
                    
                    <!-- Chart Placeholder -->
                    <div class="chart-container">
                        <canvas id="networthChart" width="400" height="200"></canvas>
                        <div class="chart-placeholder">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="22,6 22,12 18,12 18,18 12,18 12,10 6,10 6,16 2,16"></polyline>
                                <circle cx="2" cy="16" r="1"></circle>
                                <circle cx="6" cy="10" r="1"></circle>
                                <circle cx="12" cy="18" r="1"></circle>
                                <circle cx="18" cy="12" r="1"></circle>
                                <circle cx="22" cy="6" r="1"></circle>
                            </svg>
                            <p>Net Worth Trend</p>
                        </div>
                    </div>
                </div>

                <!-- Assets Section -->
                <div class="section-card assets-section">
                    <div class="section-header">
                        <h2>Your Assets</h2>
                        <p class="section-subtitle">Overview of your financial portfolio</p>
                    </div>
                    
                    <div class="assets-grid">
                        <!-- Accounts -->
                        <div class="asset-card">
                            <div class="asset-header">
                                <div class="asset-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                                        <line x1="1" y1="10" x2="23" y2="10"></line>
                                    </svg>
                                </div>
                                <div class="asset-info">
                                    <h3>Bank Accounts</h3>
                                    <p class="asset-description">Current and savings accounts</p>
                                </div>
                                <div class="asset-amount">400.06 €</div>
                            </div>
                            <div class="asset-details">
                                <div class="account-list">
                                    <div class="account-item">
                                        <span>Personal Account *8464</span>
                                        <span>400.06 €</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Investments -->
                        <div class="asset-card investment-opportunity">
                            <div class="asset-header">
                                <div class="asset-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <line x1="12" y1="20" x2="12" y2="10"></line>
                                        <line x1="18" y1="20" x2="18" y2="4"></line>
                                        <line x1="6" y1="20" x2="6" y2="16"></line>
                                    </svg>
                                </div>
                                <div class="asset-info">
                                    <h3>Investments</h3>
                                    <p class="asset-description">You could get more from your savings</p>
                                </div>
                                <div class="asset-amount">0.00 €</div>
                            </div>
                            <div class="opportunity-prompt">
                                <p>Start investing to grow your wealth</p>
                                <button class="btn btn-primary">Explore Investment Options</button>
                            </div>
                        </div>

                        <!-- Property -->
                        <div class="asset-card property-placeholder">
                            <div class="asset-header">
                                <div class="asset-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                    </svg>
                                </div>
                                <div class="asset-info">
                                    <h3>Property</h3>
                                    <p class="asset-description">Real estate holdings</p>
                                </div>
                                <div class="asset-amount">0.00 €</div>
                            </div>
                            <div class="add-asset-section">
                                <a href="#" class="add-asset-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <line x1="12" y1="8" x2="12" y2="16"></line>
                                        <line x1="8" y1="12" x2="16" y2="12"></line>
                                    </svg>
                                    Add property to your portfolio
                                </a>
                                <p class="add-asset-description">Track your property's market value appreciation over time.</p>
                            </div>
                        </div>

                        <!-- Vehicles -->
                        <div class="asset-card vehicle-placeholder">
                            <div class="asset-header">
                                <div class="asset-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M14 16V9a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v7h16v-7a2 2 0 0 0-2-2h-4z"></path>
                                        <circle cx="8" cy="20" r="2"></circle>
                                        <circle cx="16" cy="20" r="2"></circle>
                                        <path d="M1 14h22M9 10h6"></path>
                                    </svg>
                                </div>
                                <div class="asset-info">
                                    <h3>Vehicles</h3>
                                    <p class="asset-description">Cars and other vehicles</p>
                                </div>
                                <div class="asset-amount">0.00 €</div>
                            </div>
                            <div class="add-asset-section">
                                <a href="#" class="add-asset-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <line x1="12" y1="8" x2="12" y2="16"></line>
                                        <line x1="8" y1="12" x2="16" y2="12"></line>
                                    </svg>
                                    Add vehicle to your portfolio
                                </a>
                                <p class="add-asset-description">Monitor your vehicle's value depreciation year over year.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Financial Goals Section -->
                <div class="section-card goals-section">
                    <div class="section-header">
                        <h2>Financial Goals</h2>
                        <p class="section-subtitle">Track your progress towards your financial objectives</p>
                    </div>
                    <div class="goals-empty-state">
                        <div class="empty-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                            </svg>
                        </div>
                        <h3>Set Your Financial Goals</h3>
                        <p>Start planning for your future by setting savings and investment targets.</p>
                        <button class="btn btn-primary">Create Financial Goal</button>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="financial-sidebar">
                <!-- Financial Health Score Card -->
                <div class="health-score-card">
                    <h3>Financial Health Score</h3>
                    <div class="score-display">
                        <div class="score-circle">
                            <svg width="100" height="100" viewBox="0 0 100 100">
                                <circle cx="50" cy="50" r="40" fill="none" stroke="#e5e7eb" stroke-width="8"/>
                                <circle cx="50" cy="50" r="40" fill="none" stroke="#0066cc" stroke-width="8" 
                                        stroke-dasharray="251.2" stroke-dashoffset="125.6" stroke-linecap="round"/>
                            </svg>
                            <span class="score-value">7.5</span>
                        </div>
                        <p class="score-description">Good financial health</p>
                    </div>
                    <div class="score-breakdown">
                        <div class="score-item">
                            <span class="score-label">Savings Rate</span>
                            <span class="score-indicator good">●</span>
                        </div>
                        <div class="score-item">
                            <span class="score-label">Debt Ratio</span>
                            <span class="score-indicator excellent">●</span>
                        </div>
                        <div class="score-item">
                            <span class="score-label">Investment Diversity</span>
                            <span class="score-indicator needs-work">●</span>
                        </div>
                    </div>
                    <button class="btn btn-secondary">Improve Score</button>
                </div>

                <!-- Quick Actions Card -->
                <div class="quick-actions-card">
                    <h3>Quick Actions</h3>
                    <div class="quick-actions-list">
                        <a href="#" class="quick-action">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="12" y1="20" x2="12" y2="10"></line>
                                <line x1="18" y1="20" x2="18" y2="4"></line>
                                <line x1="6" y1="20" x2="6" y2="16"></line>
                            </svg>
                            <span>Start Investing</span>
                        </a>
                        <a href="#" class="quick-action">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <span>Create Budget</span>
                        </a>
                        <a href="#" class="quick-action">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                            </svg>
                            <span>Set Goals</span>
                        </a>
                        <a href="#" class="quick-action">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14,2 14,8 20,8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10,9 9,9 8,9"></polyline>
                            </svg>
                            <span>Generate Report</span>
                        </a>
                    </div>
                </div>

                <!-- Tips Card -->
                <div class="tips-card">
                    <h3>Financial Tips</h3>
                    <div class="tip-item">
                        <div class="tip-icon">💡</div>
                        <div class="tip-content">
                            <h4>Emergency Fund</h4>
                            <p>Consider building an emergency fund with 3-6 months of expenses.</p>
                        </div>
                    </div>
                    <div class="tip-item">
                        <div class="tip-icon">📈</div>
                        <div class="tip-content">
                            <h4>Diversify Investments</h4>
                            <p>Spread your investments across different asset classes to reduce risk.</p>
                        </div>
                    </div>
                    <a href="#" class="view-all-tips">View All Tips</a>
                </div>
            </div>
        </div>
    </main>
</div>

<script src="/js/desktop/common.js"></script>
